{% extends 'PodcastMainBundle::layout.html.twig' %}

{% block title %}Podcast Tool{% endblock %}

{% block content %}

<div class="row-fluid">
    <div class="span2 sideBar">
        <ul>
            <li data-link="home"><figure><i class='icon-home'></i> <div class='menuText'>Home</div></figure></li>
            <li data-link="directory" class="active"><figure><i class="icon-th-large"></i> <div class="menuText">Directory</div></figure></li>
        </ul>
    </div>
    <div class="span10 content borBox" data-bind="with: AppKernel.PodcastFinder">

        <div class='row-fluid'>
            {#
            <div class="row-fluid">
                <div class="span12">
                    <code data-bind="text: selectedCategories"></code>
                </div>
            </div>
            #}
            
            <div class="span8">
                <div class='page-header'>
                    <h2 class='hBig'>Organization
                        <small class="pull-right">Clear</small>
                    </h2>
                </div>
                <ul class="nav nav-stacked nav-pills" data-bind="foreach: organizations">
                    <li data-bind="css: { active: selected }"><a href="#" data-bind="text: name, click: $parent.toggleItem, attr: { href: link() }"></a></li>
                </ul>
            </div>
            <div class="span4">
                <div class='page-header'>
                    <h2 class='hBig'>Category
                        <small class="pull-right">Clear</small>

                    </h2>
                </div>       
                <ul class="nav nav-stacked nav-pills" data-bind="foreach: categories">
                      <li data-bind="css: { active: selected }"><a href="#" data-bind="text: name, click: $parent.toggleItem, attr: { href: link() }"></a></li>

                </ul>
            </div>
        </div>

        <div class='page-header'>
            <h1 class='hBig'>Podcasts
            </h1>
        </div>

        <div class='row-fluid gallery photo' data-bind="foreach: podcasts">
            <figure class='tile'>
                <img data-bind="attr: { alt: name, src: image }">
                <div class='hoverImg'><h3>Preview</h3>
            </div>
        </div>

    </div>
</div>

{% endblock %}