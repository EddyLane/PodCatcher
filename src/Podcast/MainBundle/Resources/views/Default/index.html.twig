{% extends 'PodcastMainBundle::layout.html.twig' %}

{% block title %}Podcast Tool{% endblock %}

{% block content %}

<div class="row-fluid">
    <div class="span2 sideBar" data-bind="with: Player">
        <div class="row-fluid">
            <div class="span12">
                <div data-bind="with: episode">
                    <div style="width:30px;" class="pull-left">
                        <img src="{{ asset('bundles/podcastmain/images/loading.gif') }}" style="width:100%;" data-bind="visible: $parent.loading()">
                    </div>
                    <p style="color: #000;font-family: 'OpenSansLight';font-size: 16px;font-weight: lighter;padding-left:10px;" data-bind="text: name"></p>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span2"> 
                <a class="btn btn-link" data-bind="click: stop">
                    <i class="icon-stop"></i>
                </a>
            </div>
            <div class="span10"> 
                <div class="progress progress-striped active">
                    <div class="bar" data-bind="style: { width: progress }"></div>
                    <div class="bar bar-warning" data-bind="style: { width: buffer }"></div>
                </div>
            </div>
        </div>

        <hr>
            {#
        {% render("FOSUserBundle:Security:login") %}
#}
        <ul>
            <li data-link="home"><figure><i class='icon-home'></i> <div class='menuText'><a href='/'>Home</a></div></figure></li>
            <li data-link="directory" class="active"><figure><i class="icon-th-large"></i> <div class="menuText"><a href='/'>Directory</a></div></figure></li>
        </ul>
    </div>
    <div class="span10 content borBox">
        
        <div data-bind="template: { name: active().template(), data: active() }"></div>
        
    </div>
</div>

{% endblock %}