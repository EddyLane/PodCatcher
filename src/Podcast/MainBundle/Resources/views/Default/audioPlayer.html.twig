<div class="well well-small" id="large_audio_player" data-bind="with: $root.podcastController">
    <div class="alert alert-info player-display"> 


        <i class="icon-blue" data-bind="css: { 'icon-play': playing() , 'icon-stop': !playing(), 'icon-pause': paused() }"></i> 
        {#
        <!-- ko with: nowPlayingPodcast -->
