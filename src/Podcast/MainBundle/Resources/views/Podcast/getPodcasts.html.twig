<section class="subhead">
    <section class="row-fluid subhead-inner">
        <div class="span12" id="main-content">



            <div class="form-horizontal" id="super-search">
                <div class="input-append">
                    <input type="text" ng-model="result" typeahead="suggestion for suggestion in searchPodcasts($viewValue)">
                    <button class="btn btn-warning" type="button"><i class="icon-white icon-search"></i></button>
                </div>
            </div>
        </div>
    </section>
</section>

<ul class="nav nav-tabs podcast-order">
    <li><span>Order by </span> </li>
    <li ng-repeat="sort in sorts" ng-class="{ active: sort.name == currentSort.name }"><a ng-click="setSort(sort)">{% raw %}{{ sort.name }}{% endraw %}</a></li>
    <li ng-repeat="category in categories | orderBy: 'name':reverse" class="pull-right"><a>{% raw %}{{ category.name }}{% endraw %}</a></li>
    <li class="pull-right"><span>Filter </span></li>
</ul>


