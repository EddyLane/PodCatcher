{% extends 'PodcastMainBundle::layout.html.twig' %}

{% block title %}Podcast Tool{% endblock %}

{% block content_header '' %}

{% block content %}
<div id="content-header">
    <h1>Category creation</h1>
</div>
<div id="breadcrumb">
    <a class="tip-bottom" href="#" data-original-title="Go to Home"><i class="icon-home"></i> Home</a>
    <a class="current" href="#">Dashboard</a>
</div>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"><i class="icon-file-alt"></i></span>
                    <h5>New</h5>
                </div>
                <div class="widget-content nopadding">
                    <form class="form-horizontal" action="{{ path('category_create') }}" method="post" {{ form_enctype(form) }}>
                            {{ form_widget(form, {'form_type': 'horizontal'}) }}
                            <div class="form-actions">
                                <button class="btn" type="submit">Create</button>
                            </div>
                        </form>
                        <ul class="record_actions">
                            <li>
                                <a href="{{ path('category') }}">
                                    Back to the list
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>          
            </div><!--/span-->
        </div><!--/row-->
    </div>
</div>

{% endblock %}