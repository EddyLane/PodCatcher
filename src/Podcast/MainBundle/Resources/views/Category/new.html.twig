{% extends 'PodcastMainBundle::layout.html.twig' %}

{% block title %}Podcast Tool{% endblock %}

{% block content_header %}
<div id="content-header">
    <h1>Category creation</h1>
</div>
<div id="breadcrumb">
    <a class="tip-bottom" href="#" data-original-title="Go to Home"><i class="icon-home"></i> Home</a>
    <a class="current" href="#">Dashboard</a>
</div>
{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">

                <div class="widget-content nopadding">
                    <form class="form-horizontal" action="{{ path('category_create') }}" method="post" {{ form_enctype(form) }} {% if app.environment == "test" %}novalidate="true"{% endif %}>
                            {{ form_widget(form, {'form_type': 'horizontal'}) }}
                            <div class="form-actions">
                                <a class="btn" href="{{ path('category') }}">Cancel</a>
                                <button class="btn" type="submit" id="create-podcast-button">Create</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div><!--/span-->
        </div><!--/row-->
    </div>
</div>
{% endblock %}
