{% extends 'PodcastMainBundle::layout.html.twig' %}

{% block title %}Podcast Tool{% endblock %}

{% block content_header '' %}

{% block content %}
<div id="content-header">
    <h1>{{ entity.name }}</h1>
    <div class="btn-group" style="width: auto;">
        <a class="btn" href="{{ path('category') }}"><i class="icon-arrow-left"></i></a>
        <a class="btn" href="{{ path('category_edit', { 'id': entity.id }) }}">Edit</a>
        <form action="{{ path('category_delete', { 'id': entity.id }) }}" method="post" style="display:inline; margin-left:10px;">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>        
    </div>
</div>
<div id="breadcrumb">
    <a class="tip-bottom" href="#" data-original-title="Go to Home"><i class="icon-home"></i> Home</a>
    <a class="current" href="#">Dashboard</a>
</div>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"><i class="icon-tags"></i></span>
                    <h5>Podcasts</h5>
                </div>
                <div class="widget-content nopadding">

                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Title</th><th>actions</th>
                            </tr>
                        </thead>
                            <tbody>
                           {% for podcast in entity.podcasts %}
                                <tr>
                                    <td>{{ podcast.name }}</td><td></td>
                                </tr>
                           {% endfor %}
                            </tbody>
                        </table>
                    </div>          
                </div><!--/span-->
            </div><!--/row-->
        </div>
    </div>
{% endblock %}