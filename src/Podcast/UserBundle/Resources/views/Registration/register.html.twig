{% trans_default_domain 'FOSUserBundle' %}

<div modal="open" close="open = false" options="options">
    <form method="post" id="registration-form" class="nomargin" name="registration-form" novalidate>
    	<div class="modal-header">
            <button type="button" class="close" ng-click="open = false" aria-hidden="true">&times;</button>
            <h3>Register</h3>
        </div>
        <div class="modal-body">
            <div class="alert alert-error" ng-show="errors">Please rectify the problems with the form and try again</div>
        	<div class="control-group" ng-class="{ error: errors.username }">
        		<label class="form-label">{{ form_label(form.username) }}</label>
        		<div class="controls">
			        	{{ form_widget(form.username, { 'attr': {'ng-model': 'form.username' }, 'required': true }) }}
                        <span ng-repeat="formError in errors.username" class="help-inline">{% raw %}{{ formError }}{% endraw %}</span>
        		</div>
        	</div>
        	<div class="control-group" ng-class="{ error: errors.email }">
        		<label class="form-label">{{ form_label(form.email) }}</label>
        		<div class="controls">
			        	{{ form_widget(form.email, { 'attr': {'ng-model': 'form.email' }, 'required': true }) }}
                    <span ng-repeat="formError in errors.email" class="help-inline">{% raw %}{{ formError }}{% endraw %}</span>
        		</div>
        	</div>
        	<div class="control-group" ng-class="{ error: errors.plainPassword.first }">
                <label class="form-label">{{ form_label(form.plainPassword.first) }}</label>
        		<div class="controls">
			        	{{ form_widget(form.plainPassword.first, { 'attr': {'ng-model': 'form.password.first' } }) }}
                    <span ng-repeat="formError in errors.plainPassword.first" class="help-inline">{% raw %}{{ formError }}{% endraw %}</span>
        		</div>
        	</div>
            <div class="control-group" ng-class="{ error: errors.plainPassword.second }">
                <label class="form-label">{{ form_label(form.plainPassword.second) }}</label>
                <div class="controls">
                    {{ form_widget(form.plainPassword.second, { 'attr': {'ng-model': 'form.password.second' } }) }}
                    <span ng-repeat="formError in errors.plainPassword.second" class="help-inline">{% raw %}{{ formError }}{% endraw %}</span>
                </div>
            </div>		</div>
		{{ form_rest(form) }}
        <div class="modal-footer">
            <button class="btn btn-warning" ng-click="register()">Register</button>
        </div>
    </form>
</div>